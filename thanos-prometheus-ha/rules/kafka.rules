groups:
- name: kafka-rules
  rules:

  - alert: KafkaBrokerNum 
    expr: kafka_brokers == 0
    for: 2m
    labels:
      severity: critical
    annotations:
      summary: "Kafka instance {{ $labels.instance }} broker number is 0."
      description: "Kafka instance {{ $labels.instance }} broker number is 0.."
